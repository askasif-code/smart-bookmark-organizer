{
  "manifest_version": 3,
  "name": "Smart Bookmark Organizer",
  "version": "1.0.0",
  "description": "Automatically organize bookmarks from YouTube, Instagram, and social media into smart categories. Save videos, stories, articles with one click!",
  "permissions": [
    "storage",
    "tabs",
    "bookmarks",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
